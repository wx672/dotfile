# colors
#set recolor true
#set recolor-keephue true
#set recolor-reverse-video true
set recolor-lightcolor "#FDF6E3"
set recolor-darkcolor "#000000"

set default-bg "#FDF6E3"
set default-fg "#000000"
set completion-fg "#dcdccc"
set completion-bg "#3f3f3f"
set inputbar-fg "#dcdccc"
set inputbar-bg "#3f3f3f"


#set statusbar-fg "93a1a1"
#set statusbar-bg "#002b36"
set font "monospace normal 18"

# settings
#set show-recent 10
set guioptions ""
set adjust-open width
set zoom-step 10
set zoom-max 500
set zoom-min 100
#set first-page-column 1:1
set selection-clipboard clipboard
set scroll-full-overlap .1
set window-icon "~/.local/share/icons/pdf.png"
set page-thumbnail-size 0

# key bindings
map q focus_inputbar ":close"
map Q quit
map W adjust_window width
map H adjust_window best-fit
map <BackSpace> scroll full-up
map u scroll half-up
unmap d
map d scroll half-down
map <C-d> toggle_page_mode
map = zoom in
map - zoom out

map [fullscreen] H adjust_window best-fit
map [fullscreen] W adjust_window width
map [fullscreen] f follow
map [fullscreen] <Tab> toggle_index
map [fullscreen] j scroll down
map [fullscreen] k scroll up

unmap b
map [normal] bm focus_inputbar ":bmark "
map [normal] bl focus_inputbar ":blist "
map [normal] bd focus_inputbar ":bdelete "
