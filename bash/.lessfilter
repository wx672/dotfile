#!/bin/sh

case "$1" in
    *.bin|*.raw|*.img|*.iso)
		if [ file "$1" | grep -q "ext2 filesystem data" ]; then
			hd "$1" | less
		fi
		;;
	*.docx|*.DOCX)
		docx2txt "$1" - | less
		;;
	*.xlsx)
		xlsx2csv "$1" 
		;;
	*.md)
		mdless --no-colour "$1"
		;;
	*.org)
		pandoc "$1" | w3m -T text/html
		;;
    *)
        # We don't handle this format.
        exit 1
esac

         # No further processing by lesspipe necessary
exit 0
