#!/bin/bash

usage(){
    cat <<EOF
USAGE: ${0##*/} [-h] [tv|pc|dup|4|3|lr|1k]

Example:
    - ${0##*/} dup|4|3  # 2k for both, overlap
    - ${0##*/} tv       # 2k for external screen; internal screen is off
    - ${0##*/} pc       # 2k for internal; external is off
    - ${0##*/} 4k       # 4k for external screen; internal screen is off
    - ${0##*/} lr       # 2k for both, left right
    - ${0##*/} 1k       # 2k for internal; 1k for external; side by side
	- ${0##*/} on       # keep laptop screen on
	- ${0##*/} off      # turn off laptop screen
EOF
}

OPT="$*"

case "$OPT" in
    tv) xrandr \
	        --output HDMI-1 --mode 1920x1080 \
	        --output eDP-1 --off ;;
    4k) xrandr \
	        --output HDMI-1 --mode 3840x2160 --pos 0x0 \
	        --output eDP-1 --off ;;
    pc) xrandr \
	        --output eDP-1 --auto \
	        --output HDMI-1 --off ;;
    lr) xrandr \
	        --output eDP-1 --primary --mode 1920x1080 --pos 0x0 \
	        --output HDMI-1 --mode 1920x1080 --left-of eDP-1 ;;
    dup|3|4) xrandr \
	         --output eDP-1  --mode 1920x1080 --pos 0x0 \
	         --output HDMI-1 --mode 1920x1080 --same-as eDP-1 ;;
    1k) xrandr \
	        --output HDMI-1 --primary --mode 1280x1024 --pos 0x0 \
	        --output eDP-1 --mode 1920x1080 --left-of HDMI-1 ;;
	on) xset s off -dpms ;;
	off) xset dpms force off; xset dpms force off; xset dpms force off; xset dpms force off
		 ;;
    *) usage; exit ;;
esac
