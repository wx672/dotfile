#!/bin/bash

cfgDir="$HOME/.config/clash"
ymlDir="$cfgDir/yml"

if [ -f "$1" ]; then
	mv "$1" "$ymlDir"
	YML="$ymlDir/$1"
else
	echo File "$1" does not exist.
	exit 1
fi

sed -i '/^#/d' "$YML"

sed -i '/local\,/a\  - DOMAIN-SUFFIX,www.kmwatersupply.com,ğŸ¯ å…¨çƒç›´è¿\n  - DOMAIN-SUFFIX,sketchviz.com,ğŸ¯ å…¨çƒç›´è¿\n  - DOMAIN-SUFFIX,overleaf.com,ğŸ¯ å…¨çƒç›´è¿\n  - DOMAIN-SUFFIX,moodle.org,ğŸ¯ å…¨çƒç›´è¿\n  - DOMAIN-SUFFIX,grammarly.com,ğŸ¯ å…¨çƒç›´è¿\n  - DOMAIN-SUFFIX,ixigua.com,ğŸ¯ å…¨çƒç›´è¿\n  - DOMAIN-SUFFIX,gitee.com,ğŸ¯ å…¨çƒç›´è¿\n  - DOMAIN-SUFFIX,wiki.archlinux.org,ğŸ¯ å…¨çƒç›´è¿' "$YML"

sed -i '/^proxies:/i dns:\n  enable: true\n  ipv6: false\n  listen: 127.0.0.1:8854\n  default-nameserver:\n    - 223.5.5.5\n    - 1.0.0.1\n  nameserver:\n    - https://223.6.6.6/dns-query\n    - https://rubyfish.cn/dns-query\n    - https://dns.pub/dns-query\n  fallback:\n    - https://1.0.0.1/dns-query\n    - https://1.1.1.1/dns-query\n    - https://public.dns.iij.jp/dns-query' "$YML"

rg -nA8 local, "$YML"

ln -sf "$YML" "$cfgDir"/config.yaml

ls -l "$cfgDir"/config.yaml

