#!/bin/bash

# This script is supposed to be invoked via hotkeys defined in dwm

gdbar() {
  blight status | rg % | choose -1 | tr -d '%' | dzen2-gdbar -h '30' | dzen2 -p 1 -w '90' -x '1800' -h '40'
}

case $1 in
  inc)
    blight inc 3 -s && gdbar
    exit
    ;;
  dec)
    blight dec 3 -s && gdbar
    exit
    ;;
  *)
    echo ${0##*/} 'get|inc|dec'
    exit 1
    ;;
esac
