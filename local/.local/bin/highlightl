#!/bin/bash

usage(){
    cat <<EOF
${0##*/} - Highlight a line on a given picture.

Usage: ${0##*/} [-h] [-s stroke] [-w width] [-o opacity] [-c "X1,Y1 X2,Y2" ] <Image>

      Image - the image to be annotated on
         -h - help
         -o - coordinates of the start point, default to '0,300'
         -l - line length, default to 600
         -c - stroke color. Default 'red'
         -w - stroke width. Default '30'
         -O - stroke opacity. Default '0.3'
See http://www.imagemagick.org/Usage/draw/ for more.
EOF
}

#######color code########
ERR="31m"     # red
SUCCESS="32m" # green
WARN="33m"    # yellow
INFO="36m"    # blue

colorEcho(){
    echo -e "\033[${1}${@:2}\033[0m" 1>& 2
}

FROM='0,300'
LEN=600

while getopts :hc:w:l:c:O:o: OPT; do
	case $OPT in
		h) usage; exit 0 ;;
		o) FROM="$OPTARG" ;;
		l) LEN="$OPTARG" ;;
		c) STROKE="$OPTARG" ;;
		w) WIDTH="$OPTARG" ;;
		O) OPACITY="$OPTARG" ;;
		?) usage; exit 2 ;;
	esac
done
shift $(( OPTIND - 1 ))
OPTIND=1

IMG="$@"
[[ -f "$IMG" ]] || { colorEcho $ERR 'ERROR: Missing argument!'; usage; exit 1; }

OUT="${IMG%.*}-out.png"

X=${FROM%,*}
Y=${FROM#*,}

TO="$(( X + LEN )),$Y"

# http://www.imagemagick.org/Usage/draw/
convert $IMG -fill none -stroke ${STROKE:-red} -strokewidth ${WIDTH:-30} \
		-draw "stroke-opacity ${OPACITY:-.3} line $FROM $TO" $OUT
