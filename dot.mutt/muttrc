# https://www.makeuseof.com/install-configure-mutt-with-gmail-on-linux/

###############
# Identity
#
set from=wx672ster@gmail.com
set realname="WANG Xiaolin"

######################
# Gmail over IMAP
set imap_user="wx672ster@gmail.com"
set imap_pass="cxeyoovuubuxodmp"

# SMTP settings
set smtp_url="smtps://wx672ster@smtp.gmail.com"
set smtp_pass="cxeyoovuubuxodmp"

# Remote Gmail folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = "+INBOX"
set postponed = "+[Gmail].Drafts"
unset record
unset trash

set mail_check=60

######################
# local mailboxes
#
set envelope_from=yes
set use_from=yes

set mbox_type=Maildir
set folder=~/Mail
set spoolfile="+inbox"
set record="+sent"
set trash="+trash"
set postponed="+drafts"

mailboxes ! +mutt +family + work

set alias_file=~/.mutt/alias
set signature=~/.mutt/signature
set charset="utf-8"
set send_charset=us-ascii:iso-8859-1:utf-8
set assumed_charset="gb2312:big5:utf-8"
set wait_key=yes
set noconfirmappend
set move=no
set ascii_chars=yes
set include
set pager_stop
set resolve=yes
set rfc2047_parameters=yes
#set create_rfc2047_parameters=yes
charset-hook !utf-8 gbk
source ~/.mutt/alias
source ~/.mutt/colors.angdraug
#source = ~/Mail/.mutt.macros
#source = ~/Mail/.gnupgp.mutt

auto_view text/html application/msword

macro index S "|/usr/bin/razor-report"
